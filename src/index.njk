---
layout: "base.njk"
---

<div id="index">
{% set currentEntry = entries[0] %}
<iframe  src="/{{ currentEntry.baseFilename }}/?embed=1" frameBorder="0" width="600" height="600" scrolling="no"></iframe>
<nav>

<footer>
<nav>
{% for entry in entries %}
  <div>
    {%- if entry == currentEntry -%}
      <strong>
        <a href="/{{ entry.baseFilename }}/">{{entry.title}}</a>
      </strong>
    {%- else -%}
      <a href="/{{ entry.baseFilename }}/">{{entry.title}}</a>
    {% endif -%}
  </div>
{% else %}
  <div> 
    Nothing here
  </div>
{% endfor %}

</nav>

<br/>
<p>bloc.art is an exploratory sketchbook project. All rights reserved.</p>

</footer>

</div>



<script>
function handleClick() {
  window.location = "/{{ currentEntry.baseFilename }}/";
}
window.addEventListener('DOMContentLoaded', (event) => {
  const iframes = [...document.getElementsByTagName("iframe")];
  iframes.forEach(elem => {
    elem.contentWindow.addEventListener('DOMContentLoaded', () => {
      elem.contentDocument.addEventListener('click', handleClick);
    });
  });
});

</script>
