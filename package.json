{
  "name": "sketches",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:js": "esbuild --watch src/entries/* src/load.js --outdir=_site --outbase=src  --sourcemap --minify",
    "dev:tsc": "tsc -noEmit",
    "prod:eleventy": "eleventy",
    "prod:js": "tsc -noEmit && esbuild src/entries/* src/load.js --outdir=_site --outbase=src --minify",
    "build": "run-s prod:*",
    "clean": "rm -rf _site .cache"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "esbuild": "^0.12.22",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.3",
    "typescript": "^4.3.5"
  },
  "targets": {
    "main": {
      "source": "src/entries/*.js",
      "outDir": "./_site",
      "outputFormat": "esmodule",
      "scopeHoist": true
    }
  }
}
